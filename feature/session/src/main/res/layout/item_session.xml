<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    >

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/session_item_margin_bottom"
        android:background="?attr/selectableItemBackground"
        android:paddingBottom="8dp"
        tools:theme="@style/Theme.DroidKaigi"
        >

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/guideline_start"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_begin="@dimen/session_time_space"
            />

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/guideline_end"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_end="8dp"
            />

        <TextView
            android:id="@+id/room"
            android:layout_width="wrap_content"
            android:layout_height="24dp"
            android:layout_marginTop="8dp"
            android:alpha="0.38"
            android:gravity="center_vertical"
            android:textAppearance="?attr/textAppearanceCaption"
            android:textColor="?colorOnSurface"
            app:layout_constraintStart_toStartOf="@id/guideline_start"
            app:layout_constraintTop_toTopOf="parent"
            tools:text="Hall"
            />

        <TextView
            android:id="@+id/live"
            android:layout_width="wrap_content"
            android:layout_height="20dp"
            android:layout_marginStart="4dp"
            android:background="@drawable/shape_session_on_going_background"
            android:padding="2dp"
            android:text="@string/session_on_going"
            android:textAppearance="?attr/textAppearanceCaption"
            android:textColor="?attr/colorOnPrimary"
            app:layout_constraintBottom_toBottomOf="@id/room"
            app:layout_constraintStart_toEndOf="@id/room"
            app:layout_constraintTop_toTopOf="@id/room"
            />

        <ImageButton
            android:id="@+id/favorite"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="?selectableItemBackgroundBorderless"
            android:padding="8dp"
            android:src="@drawable/ic_bookmark_border_black_24dp"
            android:tint="?colorSecondary"
            app:layout_constraintEnd_toEndOf="@id/guideline_end"
            app:layout_constraintTop_toTopOf="parent"
            />

        <TextView
            android:id="@+id/title"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="32dp"
            android:singleLine="false"
            android:textAppearance="?attr/textAppearanceHeadline6"
            android:textColor="@color/session_title"
            android:lineSpacingExtra="8sp"
            app:layout_constraintEnd_toEndOf="@id/guideline_end"
            app:layout_constraintStart_toStartOf="@id/guideline_start"
            app:layout_constraintTop_toBottomOf="@id/room"
            tools:text="マルチモジュールなプロジェクトでテストはどう変わる？"
            />

        <LinearLayout
            android:id="@+id/speakers"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginTop="8dp"
            android:divider="@drawable/session_item_speaker_divider"
            android:orientation="vertical"
            android:showDividers="middle"
            app:layout_constraintEnd_toEndOf="@id/guideline_end"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="@id/guideline_start"
            app:layout_constraintTop_toBottomOf="@id/title"
            />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/survey"
            style="@style/Widget.MaterialComponents.Button.OutlinedButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:minHeight="24dp"
            android:paddingLeft="8dp"
            android:paddingRight="8dp"
            android:text="@string/session_survey_label"
            android:textAppearance="?attr/textAppearanceCaption"
            android:textColor="@color/survey_button"
            android:textSize="10sp"
            app:icon="@drawable/ic_add_comment_24dp"
            app:iconPadding="8dp"
            app:iconSize="14dp"
            app:iconTint="@color/survey_button"
            app:layout_constraintStart_toStartOf="@id/guideline_start"
            app:layout_constraintTop_toBottomOf="@id/speakers"
            app:strokeColor="@color/survey_button"
            app:strokeWidth="1dp"
            tools:enabled="false"
            />
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>
