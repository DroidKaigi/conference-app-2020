<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Base application theme. -->
    <style name="Base.Theme.DroidKaigi" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Text appearances -->
        <item name="textAppearanceHeadline5">@style/TextAppearance.DroidKaigi.Headline5</item>
        <item name="textAppearanceHeadline6">@style/TextAppearance.DroidKaigi.Headline6</item>
        <item name="textAppearanceSubtitle1">@style/TextAppearance.DroidKaigi.Subtitle1</item>
        <item name="textAppearanceSubtitle2">@style/TextAppearance.DroidKaigi.Subtitle2</item>
        <item name="textAppearanceBody1">@style/TextAppearance.DroidKaigi.Body1</item>
        <item name="textAppearanceBody2">@style/TextAppearance.DroidKaigi.Body2</item>
        <item name="textAppearanceCaption">@style/TextAppearance.DroidKaigi.Caption</item>
        <item name="textAppearanceButton">@style/TextAppearance.DroidKaigi.Button</item>

        <!-- Widget styles -->
        <item name="filterChipStyle">@style/Widget.DroidKaigi.FilterChip</item>
    </style>

    <style name="Theme.DroidKaigi" parent="Base.Theme.DroidKaigi">
        <!-- Colors -->
        <item name="colorPrimary">@color/indigo_900</item>
        <item name="colorPrimaryVariant">@color/indigo_900</item>
        <item name="colorSecondary">@color/light_blue_300</item>
        <item name="colorSecondaryVariant">@color/light_blue_300</item>
        <item name="android:colorBackground">@color/white</item>
        <item name="colorSurface">@color/white</item>

        <item name="colorOnPrimary">@color/white</item>
        <item name="colorOnSecondary">@color/black</item>
        <item name="colorOnBackground">@color/black_alpha_87</item>
        <item name="colorOnSurface">@color/black</item>
    </style>

    <style name="Theme.DroidKaigi.DayNight" parent="Theme.DroidKaigi" />

    <style name="Theme.DroidKaigi.ActionBar" parent="Theme.DroidKaigi">
        <item name="windowActionBar">true</item>
        <item name="windowNoTitle">false</item>

        <item name="colorPrimary">@color/white</item>
        <item name="colorPrimaryDark">@color/gray</item>
    </style>
</resources>
